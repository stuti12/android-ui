<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="buttonWhite">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/_13sdp</item>
    </style>

    <style name="editTextVerificationCode">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/Primary</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintEnabled">true</item>
    </style>

    <style name="darkTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:fontFamily">Noto Sans JP</item>
    </style>

    <style name="socialButton">
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="background">@drawable/button_style</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/Primary</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="boxBackgroundMode">outline</item>
    </style>

    <style name="lightTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/noto_sans_sp</item>
    </style>

    <style name="lightLabelTitle">
        <item name="android:textColor">@color/colorHomeRecycle</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/Primary</item>
        <item name="boxStrokeWidth">@dimen/_2ssp</item>
    </style>

    <style name="homeTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="homeBarTitleSmallText">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/noto_sans_sp</item>
    </style>
    <style name="homeBarTitleLargeText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="fontWeight">700</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>

    <style name="homeRecycleText">
        <item name="android:textColor">@color/colorHomeRecycle</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>

    <style name="homeRecycleInnerText">
        <item name="android:textColor">@color/colorHomeRecycle</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>
    <style name="homeRecycleTextLight">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/colorHomeTextGrey</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
    </style>
    <style name="homePopularRecycleViewText">
        <item name="android:textColor">@color/colorHomeRecycle</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>
    <style name="body">
        <item name="android:textSize">
            @dimen/_10sdp
        </item>
        <item name="android:textColor">
            @color/labelText
        </item>
    </style>
</resources>
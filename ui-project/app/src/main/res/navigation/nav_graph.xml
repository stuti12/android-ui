<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentHome">

    <fragment
        android:id="@+id/fragmentHome"
        android:name="com.example.evenline_ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home"
            app:destination="@id/fragmentSearch" />
    </fragment>

    <fragment
        android:id="@+id/fragmentSearch"
        android:name="com.example.evenline_ui.home.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_search"
            app:destination="@id/action_favourite"
            app:popUpTo="@+id/fragmentHome" />
    </fragment>

    <fragment
        android:id="@+id/fragmentFavourites"
        android:name="com.example.evenline_ui.home.FavouriteFragment"
        android:label="fragment_favourites"
        tools:layout="@layout/fragment_favourite">

        <action
            android:id="@+id/action_favourite"
            app:destination="@id/fragmentTicket"
            app:popUpTo="@+id/fragmentHome" />
    </fragment>
    <fragment
        android:id="@+id/fragmentTicket"
        android:name="com.example.evenline_ui.home.TicketFragment"
        android:label="fragment_ticket"
        tools:layout="@layout/fragment_ticket">

        <action
            android:id="@+id/action_ticket"
            app:destination="@id/fragmentProfile"
            app:popUpTo="@+id/fragmentHome" />
    </fragment>
    <fragment
        android:id="@+id/fragmentProfile"
        android:name="com.example.evenline_ui.home.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profile"
            app:popUpTo="@+id/fragmentHome" />
    </fragment>
</navigation>